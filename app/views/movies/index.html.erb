<h2>All Movies</h2>
<%= form_tag movies_path, method: :get, id: 'ratings_form' do %>
  Include: 
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, @movie_ratings.include?(rating), :id => "ratings_#{rating}"
  = submit_tag 'Refresh', :id => 'ratings_submit'

<%#  Part 2: Start here... %>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th><%{:class => @title_class}= link_to 'Movie Title', movies_path(:sort => 'title', :ratings => @movie_ratings), :id => 'title_class'%></th>
      <th>Rating</th>
      <th><%{:class => @date_class}= link_to 'Release Date', movies_path(:sort => 'release_date', :ratings => @movie_ratings), :id => 'release_date_class'%></th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>
